<tr>
  <td class='align-middle'>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class='align-middle'><%= test.level %></td>
  <td class='align-middle'><%= test.questions.count %></td>
    <td class='align-middle'><%= link_to t('.link_show'), admin_test_path(test) %></td>
    <td class='align-middle'>
      <%= link_to t('.link_edit'), edit_admin_test_path(test), class: 'form-inline-link', data: { test_id: test.id } %>
    </td>
    <td class='align-middle'><%= link_to t('.link_delete'), admin_test_path(test), method: :delete, data: { confirm: t('.confirm') } %></td>
</tr>
