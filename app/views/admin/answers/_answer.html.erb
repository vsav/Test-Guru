<div class="card-body">
  <p class=<%= answer.correct? ? "text-success" : "card-text"%>>
    <%= answer.body %>
    <% if answer.correct? %>
      (correct)
    <% end %>
  </p>
  <div class="btn-group" role="group" aria-label="actions">
    <%= link_to 'Show', admin_answer_path(answer), class: 'btn btn-outline-secondary' %>
    <%= link_to 'Edit', edit_admin_answer_path(answer), class: 'btn btn-outline-secondary' %>
    <%= link_to 'Delete', admin_answer_path(answer), class: 'btn btn-outline-secondary',
                method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
